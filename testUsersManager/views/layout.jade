doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title #{title} - My Express Application
    link(rel='stylesheet', type='text/css', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', type='text/css', href='/stylesheets/style.css')
    script(src='/javascripts/modernizr-2.6.2.js')
  body(ng-app="testUsersManager" ng-controller="mainController")
    h1= __('m_connectionProblem')
    .navbar.navbar-inverse.navbar-fixed-top
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='/') Application name
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            li
              a(href='#home' translate) topMenu.Home
            li
              a(href='#about' translate) topMenu.About
            li
              a(href='#contact' translate) topMenu.Contact
            li(login-show)
              a(href='#groups' translate) topMenu.Groups
            li(login-show)
              a(href='#users' translate) topMenu.Users
            li(login-hide)
              a(href='#login' translate) topMenu.Login
            li(login-show)
              a(href='' ng-click="logout()" ) 
                span(translate) topMenu.Logout 
                span  {{user}}            
    div(messages-dir style="position: absolute" class="col-sm-offset-2 col-sm-8")

    <button type="button" class="btn btn-default" ng-click="openModalYesNoCancel('/views/account/login','loginController')">Open me!</button>
    .container.body-content
      block content
      hr
      footer
        p &copy; #{year} - My Express Application

    script(src='/javascripts/jquery-1.10.2.js')
    script(src='/javascripts/bootstrap.js')
    script(src='/javascripts/respond.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3//angular-route.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3/angular-animate.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3//angular-resource.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3//angular-sanitize.min.js')
    script(src='https://ajax.googleapis.com/ajax/libs/angularjs/1.5.3//angular-touch.min.js')
    script(src='/javascripts/ui-bootstrap-tpls-1.3.2.min.js')
    script(src='/javascripts/utils.js')
    script(src='/javascripts/app/testUsersManager.js')
    script(src='/javascripts/app/main/mainController.js')
    script(src='/javascripts/app/account/authService.js')
    script(src='/javascripts/app/account/account.js')
    script(src='/javascripts/app/infrastructure/messagesSrv.js')
    script(src='/javascripts/app/infrastructure/messageBoxController.js')    
    script(src='/javascripts/app/directives/matchOther.js')  
    script(src='/javascripts/app/directives/validate.js')   
    script(src='/javascripts/app/localizationSrv/localizationSrv.js')        
    script(src='/javascripts/app/localizationSrv/translateDirective.js')  
    script(src='/javascripts/app/users/users.js')        
    script(src='/javascripts/app/users/usersService.js')  
    script(src='/javascripts/app/groups/groups.js')        
    script(src='/javascripts/app/groups/groupsService.js')  
    script(src='/javascripts/app/directives/tabs.js') 

    block scripts
